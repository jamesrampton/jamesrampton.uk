{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- $siteLink := .Permalink -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/" xmlns:content="http://purl.org/rss/1.0/modules/content">
  <channel>
    <title>jamesrampton.uk</title>
    <link>{{ .Permalink }}</link>
    <description>{{ .Site.Title }}'s recent posts</description>
    <generator>Hugo -- gohugo.io</generator>{{ with .Site.LanguageCode }}
    <language>{{.}}</language>{{end}}{{ with .Site.Author.email }}
    <managingEditor>{{.}}{{ with $.Site.Author.name }} ({{.}}){{end}}</managingEditor>{{end}}{{ with .Site.Author.email }}
    <webMaster>{{.}}{{ with $.Site.Author.name }} ({{.}}){{end}}</webMaster>{{end}}{{ with .Site.Copyright }}
    <copyright>{{.}}</copyright>{{end}}{{ if not .Date.IsZero }}
    <lastBuildDate>{{ .Site.LastChange.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{- with .OutputFormats.Get "RSS" -}}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end -}}
    {{ range $i, $page := where (where .Site.Pages ".Section" "posts") "Kind" "page" }}
      {{ if lt $i $limit }}
      <item>
          <title>{{ .Title }}</title>
          <link>{{ .Permalink }}</link>
          <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
          {{ with .Site.Author.name }}<author>{{.}}</author>{{end}}
          <guid>{{ .Permalink }}</guid>
          {{ if isset .Params "images" }}
          {{ $featured_image := index (.Params.Images) 0 }}
          <media:content type="image/jpeg" medium="image" url="{{ $siteLink | replaceRE "/$" "" }}{{ $featured_image | safeHTML }}" />
          {{ end }}
          <description>{{ chomp "<![CDATA[\n" }}{{ .Summary | html }}{{ chomp "]]>\n" }}</description>
          <content:encoded>{{ chomp "<![CDATA[\n" }}{{ .Content | html }} {{ printf "<hr><p><strong>First published on <a href=%q>www.jamesrampton.uk</a></strong></p>" .Permalink | html }}{{ chomp "]]>\n" }}</content:encoded>
      </item>
      {{ end }}
    {{ end }}
  </channel>
</rss>
